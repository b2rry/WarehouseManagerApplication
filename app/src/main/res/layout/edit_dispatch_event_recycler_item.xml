<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="380dp"
    android:layout_height="40dp">

    <androidx.cardview.widget.CardView

        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/little_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/dispatch_event_recycler_contractor"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                tools:text="ООО &quot;Викор&quot;" />


            <TextView
                android:id="@+id/dispatch_event_recycler_amount"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="300" />

            <TextView
                android:id="@+id/dispatch_event_recycler_date"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                tools:text="05.06.22" />

            <TextView
                android:id="@+id/dispatch_event_recycler_click"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/attention_red"
                android:text="@string/edit_button"
                android:textSize="16sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
